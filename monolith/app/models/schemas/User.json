{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 6
      },
      "jobTitle": {
        "type": "string",
        "minLength": 8
      },
      "jobSkills": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 3
         }
      },
      "parent": {
        "type": "string",
        "minLength": 6
      },
      "nationalCode":{
        "type": "@id"
      }
    },
    "additionalProperties": false,
    "required": ["username", "jobTitle", "jobSkills", "parent", "nationalCode"]
  }